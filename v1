function showURL(href){
  var app = UiApp.createApplication().setHeight(50).setWidth(200);
  app.setTitle("Show URL");
  var link = app.createAnchor('open ', href).setId("link");
  app.add(link);  
  var doc = SpreadsheetApp.getActive();
  doc.show(app);
}
function onOpen(){
  var menu = SpreadsheetApp.getUi().createMenu("Custom Functions");
  menu.addItem("❔ | Help", "popup");
  menu.addItem("☢️ | Nuke Sheet", "nuke");
  menu.addItem("📖 | Feedback/Support", "feedback")
  menu.addToUi();
  GET();
  FUNCTION();
  COMBINE();
  AVG();
  FART();
  DOUBLE();
  HALF();
  GEL();
  GEL_SYMBOL();
  GEL_SIMPLE();
  USGPA();
}
function popup() {
  SpreadsheetApp.getUi().alert('Custom Functions', 'GET\nThe GET function will pull data from a range and imports it.\n\nFUNCTION\nThe FUNCTION function will display the function in the cell instead of activating it. Make sure to put quotes around the function\n\nCOMBINE\nThe COMBINE function will combine 2 different strings into 1.\n\nAVERAGE\nThe AVERAGE function will find the average of 2 numbers.\n\nFART\nfart...\n\nGEL\nThe GEL function will tell you if the first input is Greater than, Less than, or Equal to the second input. It also has GEL_SIMPLE which uses G,L, and E, to show, along with GEL_SYMBOL which does the same thing but uses >,<, and = to show.\n\nDOUBLE\nThe DOUBLE function doubles the input.\n\nHALF\nThe HALF function halfs the input.\n\nUSGPA\nThe USGPA function will give you a GPA based on the numbers of the grade. You must input 8 different numbers that range from 0 to 4, and you can see what each number represents in the following:\nA: 4\nB: 3\nC: 2\nD: 1\nF: 0\n\n', SpreadsheetApp.getUi().ButtonSet.OK);
}
function nuke() {
  var result = SpreadsheetApp.getUi().alert('Nuke Sheet?', 'Are you sure you want to nuke this sheet?\nThis action CAN be undone using the undo feature.', SpreadsheetApp.getUi().ButtonSet.YES_NO);
  if(result === SpreadsheetApp.getUi().Button.YES) {
    var spreadsheet = SpreadsheetApp.getActive();
    spreadsheet.getRange('B350').activate();
    var currentCell = spreadsheet.getCurrentCell();
    var sheet = spreadsheet.getActiveSheet();
    sheet.getRange(1, 1, sheet.getMaxRows(), sheet.getMaxColumns()).activate();
    currentCell.activateAsCurrentCell();
    spreadsheet.getActiveRangeList().clear({contentsOnly: true, skipFilteredRows: true});
    spreadsheet.getActiveSheet().setName('☢️ Nuked Sheet');
    spreadsheet.getRange('A1').activate();
  }
  if(result === SpreadsheetApp.getUi().Button.NO) {
    SpreadsheetApp.getActive().toast("Sheet Nuke cancled!", " ");
  }
  else{
    SpreadsheetApp.getActive().toast("So do you want to nuke the slide or...", " ");
  }
}
function feedback(){
  showURL("Feedback/Support", "Click here!", "https://forms.gle/xzJU811eUf2u2BFb6")
}
function showURL(title,name,url) {
  var html = '<html><body><a href="'+url+'" target="blank" onclick="google.script.host.close()">'+name+'</a></body></html>';
  var ui = HtmlService.createHtmlOutput(html)
  SpreadsheetApp.getUi().showModelessDialog(ui,title);
}

//GET
function GET(range){return range}
//FUNCTION
function FUNCTION(func){return func}
//COMBINE
function COMBINE(string1, string2){return ((string1),(string2))}
//AVG
function AVG(number1, number2){return (number1+number2)/2}
//FART
function FART(string){return "(ˆ⺫ˆ๑)<3"}
//DOUBLE
function DOUBLE(number){return (number*2)}
//HALF
function HALF(number){return (number/2)}
//GEL
function GEL(number1, number2){var a = number1;var b = number2;if (a > b) return ("Greater");else if (a < b) return ("Lesser");else return ("Equal")}
//GEL SYMBOL
function GEL_SYMBOL(number1, number2){var a = number1;var b = number2;if (a > b) return (">");else if (a < b) return ("<");else return ("=")}
//GEL SIMPLE
function GEL_SIMPLE(number1, number2){var a = number1;var b = number2;if (a > b) return ("G");else if (a < b) return ("L");else return ("E")}
//USGPA
function USGPA(n1,n2,n3,n4,n5,n6,n7,n8){return ((n1+n2+n3+n4+n5+n6+n7+n8)/8)}
